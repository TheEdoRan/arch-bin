#!/usr/bin/bash

OPTS=("Suspend" "Lock" "Exit" "Shutdown" "Reboot")

# Check if we have to display power menu (user pressed power button).
if [ -z "$1" ]; then
  RES=$(echo "${OPTS[@]}" | tr ' ' '\n' | dmenu -i)
else
  RES=$1
fi

RES=$(echo "$RES" | awk '{print tolower($0)}')

case $RES in
  "suspend")
    systemctl suspend
    ;;
  "lock")
    light-locker-command -l
    ;;
  "exit")
    i3-msg exit
    ;;
  "shutdown")
    systemctl poweroff
    ;;
  "reboot")
    systemctl reboot
    ;;
esac
